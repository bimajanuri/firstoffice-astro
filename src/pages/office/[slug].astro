---
import BaseLayout from "../../layouts/BaseLayout.astro";
import offices from "../../data/offices.json";
import bookings from "../../data/bookings.json";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

// Check photos
import photo1 from "../../assets/images/photos/photo-1.png";
import photo2 from "../../assets/images/photos/photo-2.png";

// Gallery Placeholders (using same valid images for all offices for now)
import gallery1 from "../../assets/images/thumbnails/thumbnail-details-1.png";
import gallery2 from "../../assets/images/thumbnails/thumbnail-details-2.png";
import gallery3 from "../../assets/images/thumbnails/thumbnail-details-3.png";

export const prerender = true;

export async function getStaticPaths() {
    return offices.map((office) => {
        // Find a booking for this office (if available)
        const relatedBooking = bookings.find(
            (booking) => booking.officeSlug === office.slug,
        );

        return {
            params: { slug: office.slug },
            props: { office, relatedBooking },
        };
    });
}

interface Props {
    office: {
        slug: string;
        name: string;
        price: string;
        duration: number;
        location: string;
        rating: number;
        thumbnail: string;
        isPopular: boolean;
        status: string;
        description: string;
        address: string;
    };
    relatedBooking?: {
        bookingTrxId: string;
        officeSlug: string;
    };
}

const { office, relatedBooking } = Astro.props;

// Dynamic main thumbnail if needed, but here we use gallery
// We could also dynamically load the office thumbnail if we wanted to show it.
---

<BaseLayout title={`FirstOffice - ${office.name}`}>
    <section id="Gallery" class="-mb-[50px] px-4 lg:px-0">
        <div class="swiper w-full">
            <div class="swiper-wrapper">
                <div class="swiper-slide !w-fit">
                    <div
                        class="w-full sm:w-[700px] h-[300px] sm:h-[550px] overflow-hidden rounded-[20px] lg:rounded-none"
                    >
                        <Image
                            src={gallery1}
                            class="w-full h-full object-cover"
                            alt="thumbnail"
                            loading="eager"
                            widths={[320, 640, 768]}
                            sizes="(max-width: 640px) 100vw, 700px"
                        />
                    </div>
                </div>
                <div class="swiper-slide !w-fit">
                    <div
                        class="w-full sm:w-[700px] h-[300px] sm:h-[550px] overflow-hidden rounded-[20px] lg:rounded-none"
                    >
                        <Image
                            src={gallery2}
                            class="w-full h-full object-cover"
                            alt="thumbnail"
                            loading="eager"
                            widths={[320, 640, 768]}
                            sizes="(max-width: 640px) 100vw, 700px"
                        />
                    </div>
                </div>
                <div class="swiper-slide !w-fit">
                    <div
                        class="w-full sm:w-[700px] h-[300px] sm:h-[550px] overflow-hidden rounded-[20px] lg:rounded-none"
                    >
                        <Image
                            src={gallery3}
                            class="w-full h-full object-cover"
                            alt="thumbnail"
                            loading="eager"
                            widths={[320, 640, 768]}
                            sizes="(max-width: 640px) 100vw, 700px"
                        />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section
        id="Details"
        class="relative flex flex-col lg:flex-row w-full max-w-screen-xl mx-auto gap-[30px] mb-20 z-10 px-4 mt-10 lg:mt-0"
    >
        <div
            class="flex flex-col w-full rounded-[20px] border border-[#E0DEF7] p-6 lg:p-[30px] gap-[30px] bg-white"
        >
            {
                office.isPopular && (
                    <p class="w-fit rounded-full p-[6px_16px] bg-[#0D903A] font-bold text-sm leading-[21px] text-[#F7F7FD]">
                        Popular
                    </p>
                )
            }
            <div
                class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 sm:gap-0"
            >
                <div>
                    <h1
                        class="font-extrabold text-[28px] lg:text-[32px] leading-[40px] lg:leading-[44px]"
                    >
                        {office.name}
                    </h1>
                    <div class="flex items-center gap-[6px] mt-[10px]">
                        <Icon name="lucide:map-pin" class="w-6 h-6" />
                        <p class="font-semibold">{office.location}</p>
                    </div>
                </div>
                <div class="flex flex-col gap-[6px]">
                    <div class="flex items-center gap-1">
                        <Icon name="lucide:star" class="w-5 h-5" />
                        <Icon name="lucide:star" class="w-5 h-5" />
                        <Icon name="lucide:star" class="w-5 h-5" />
                        <Icon name="lucide:star" class="w-5 h-5" />
                        <Icon name="lucide:star" class="w-5 h-5" />
                    </div>
                    <p class="font-semibold text-left sm:text-right">
                        {office.rating}/5 (19,384)
                    </p>
                </div>
            </div>
            <p class="leading-[30px]">
                {office.description}
            </p>
            <hr class="border-[#F6F5FD]" />
            <h2 class="font-bold">You Get What You Need Most</h2>
            <div
                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-5 gap-y-[30px]"
            >
                <div class="flex items-center gap-4">
                    <Icon name="lucide:user-check" class="w-[34px] h-[34px]" />
                    <div class="flex flex-col gap-[2px]">
                        <p class="font-bold text-lg leading-[24px]">Privacy</p>
                        <p class="text-sm leading-[21px]">For Yourself</p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <Icon name="lucide:trophy" class="w-[34px] h-[34px]" />
                    <div class="flex flex-col gap-[2px]">
                        <p class="font-bold text-lg leading-[24px]">
                            Global Event
                        </p>
                        <p class="text-sm leading-[21px]">Startup Contest</p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <Icon name="lucide:trending-up" class="w-[34px] h-[34px]" />
                    <div class="flex flex-col gap-[2px]">
                        <p class="font-bold text-lg leading-[24px]">
                            Sustainbility
                        </p>
                        <p class="text-sm leading-[21px]">Long-term Goals</p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <Icon name="lucide:coffee" class="w-[34px] h-[34px]" />
                    <div class="flex flex-col gap-[2px]">
                        <p class="font-bold text-lg leading-[24px]">
                            Extra Snacks
                        </p>
                        <p class="text-sm leading-[21px]">Work-Life Balance</p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <Icon name="lucide:box" class="w-[34px] h-[34px]" />
                    <div class="flex flex-col gap-[2px]">
                        <p class="font-bold text-lg leading-[24px]">Compact</p>
                        <p class="text-sm leading-[21px]">Good for Focus</p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <Icon name="lucide:users" class="w-[34px] h-[34px]" />
                    <div class="flex flex-col gap-[2px]">
                        <p class="font-bold text-lg leading-[24px]">
                            Free Move
                        </p>
                        <p class="text-sm leading-[21px]">Anytime 24/7</p>
                    </div>
                </div>
            </div>
            <hr class="border-[#F6F5FD]" />
            <div class="flex flex-col gap-[6px]">
                <h2 class="font-bold">Office Address</h2>
                <p>{office.name}</p>
                <p>{office.address}</p>
            </div>
            <div class="overflow-hidden w-full h-[280px] rounded-[20px]">
                <div
                    id="my-map-display"
                    class="h-full w-full max-w-[none] bg-none"
                >
                    <iframe
                        class="h-full w-full border-0"
                        frameborder="0"
                        src={`https://www.google.com/maps/embed/v1/place?q=${office.address ? encodeURIComponent(office.address) : "Monumen+Nasional,+DKI+Jakarta"}&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8`}
                    ></iframe>
                </div>
            </div>
        </div>

        <!-- Sidebar / Booking Box -->
        <div class="w-full lg:w-[392px] flex flex-col shrink-0 gap-[30px]">
            <div
                class="flex flex-col rounded-[20px] border border-[#E0DEF7] p-[30px] gap-[30px] bg-white"
            >
                <div>
                    <p
                        class="font-extrabold text-[32px] leading-[48px] text-[#0D903A]"
                    >
                        {office.price}
                    </p>
                    <p class="font-semibold mt-1">
                        For {office.duration} days working
                    </p>
                </div>
                <hr class="border-[#F6F5FD]" />
                <div class="flex flex-col gap-5">
                    <div class="flex items-center gap-3">
                        <Icon
                            name="lucide:check-circle"
                            class="w-[30px] h-[30px]"
                        />
                        <p class="font-semibold leading-[28px]">
                            Access to the latest learning resources regarding
                            the startup world
                        </p>
                    </div>
                    <div class="flex items-center gap-3">
                        <Icon
                            name="lucide:check-circle"
                            class="w-[30px] h-[30px]"
                        />
                        <p class="font-semibold leading-[28px]">
                            Access to the latest learning resources regarding
                            the startup world
                        </p>
                    </div>
                    <div class="flex items-center gap-3">
                        <Icon
                            name="lucide:check-circle"
                            class="w-[30px] h-[30px]"
                        />
                        <p class="font-semibold leading-[28px]">
                            Access to the latest learning resources regarding
                            the startup world
                        </p>
                    </div>
                </div>
                <hr class="border-[#F6F5FD]" />
                <div class="flex flex-col gap-[14px]">
                    {
                        office.status === "Booked" ? (
                            <button
                                class="flex items-center justify-center w-full rounded-full p-[16px_26px] gap-3 bg-gray-400 font-bold text-[#F7F7FD] cursor-not-allowed"
                                disabled
                            >
                                <span>Fully Booked</span>
                            </button>
                        ) : relatedBooking ? (
                            <a
                                href={`/booking/${relatedBooking.bookingTrxId}`}
                                class="flex items-center justify-center w-full rounded-full p-[16px_26px] gap-3 bg-[#0D903A] font-bold text-[#F7F7FD] hover:bg-[#096b2b] transition-all duration-300"
                            >
                                <Icon
                                    name="lucide:sliders-horizontal"
                                    class="w-6 h-6 text-white"
                                />
                                <span>View Booking Details</span>
                            </a>
                        ) : (
                            <button
                                class="flex items-center justify-center w-full rounded-full p-[16px_26px] gap-3 bg-gray-400 font-bold text-[#F7F7FD] cursor-not-allowed"
                                disabled
                            >
                                <span>No Booking Available</span>
                            </button>
                        )
                    }
                    <button
                        id="save-button"
                        class="flex items-center justify-center w-full rounded-full border border-[#000929] p-[16px_26px] gap-3 bg-white font-semibold hover:bg-gray-50 transition-colors duration-300"
                    >
                        <Icon name="lucide:bookmark-plus" class="w-6 h-6" />
                        <span>Save for Later</span>
                    </button>
                </div>
            </div>
            <div
                class="flex flex-col rounded-[20px] border border-[#E0DEF7] p-[30px] gap-[20px] bg-white"
            >
                <h2 class="font-bold">Contact Our Sales</h2>
                <div class="flex flex-col gap-[30px]">
                    <div class="flex items-center justify-between gap-3">
                        <div class="flex items-center gap-4">
                            <div
                                class="w-[60px] h-[60px] rounded-full overflow-hidden"
                            >
                                <Image
                                    src={photo1}
                                    class="w-full h-full object-cover"
                                    alt="photo"
                                />
                            </div>
                            <div class="flex flex-col gap-[2px]">
                                <p class="font-bold">Masayoshi</p>
                                <p class="text-sm leading-[21px]">
                                    Sales Manager
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <a
                                href="https://wa.me/6281234567899?text=Hello%2C%20I%20would%20like%20to%20know%20how%20to%20rent%20an%20office%20at%20FirstOffice."
                            >
                                <Icon
                                    name="lucide:message-circle"
                                    class="w-10 h-10 text-green-600"
                                />
                            </a>
                        </div>
                    </div>
                    <div class="flex items-center justify-between gap-3">
                        <div class="flex items-center gap-4">
                            <div
                                class="w-[60px] h-[60px] rounded-full overflow-hidden"
                            >
                                <Image
                                    src={photo2}
                                    class="w-full h-full object-cover"
                                    alt="photo"
                                />
                            </div>
                            <div class="flex flex-col gap-[2px]">
                                <p class="font-bold">Fuji Ovina</p>
                                <p class="text-sm leading-[21px]">
                                    Sales Manager
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <a
                                href="https://wa.me/6281234567899?text=Hello%2C%20I%20would%20like%20to%20know%20how%20to%20rent%20an%20office%20at%20FirstOffice."
                            >
                                <Icon
                                    name="lucide:message-circle"
                                    class="w-10 h-10 text-green-600"
                                />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Toast Notification -->
    <div
        id="toast"
        class="fixed top-4 right-4 z-50 transform translate-x-[500px] transition-all duration-300 ease-out"
    >
        <div
            class="flex items-center gap-3 bg-white rounded-[20px] border border-[#E0DEF7] shadow-lg p-4 min-w-[300px]"
        >
            <div
                class="w-10 h-10 rounded-full bg-green-50 flex items-center justify-center flex-shrink-0"
            >
                <Icon
                    name="lucide:check-circle"
                    class="w-6 h-6 text-[#0D903A]"
                />
            </div>
            <div class="flex-1">
                <p class="font-semibold text-[#000929]">Saved Successfully!</p>
                <p class="text-sm text-gray-600">
                    Office has been saved for later
                </p>
            </div>
        </div>
    </div>

    <script>
        import Swiper from "swiper";
        import "swiper/css";

        const swiper = new Swiper(".swiper", {
            // Optional parameters
            direction: "horizontal",
            spaceBetween: 10,
            slidesPerView: "auto",
            slidesOffsetAfter: 10,
            slidesOffsetBefore: 10,
        });

        // Save for Later functionality
        const saveButton = document.getElementById("save-button");
        const toast = document.getElementById("toast");

        if (saveButton && toast) {
            saveButton.addEventListener("click", () => {
                // Show toast
                toast.classList.remove("translate-x-[500px]");
                toast.classList.add("translate-x-0");

                // Auto hide after 3 seconds
                setTimeout(() => {
                    toast.classList.remove("translate-x-0");
                    toast.classList.add("translate-x-[500px]");
                }, 3000);
            });
        }
    </script>
</BaseLayout>
