<div class="card animate-pulse">
    <div
        class="flex flex-col rounded-[20px] border border-[#E0DEF7] bg-white overflow-hidden"
    >
        <div class="thumbnail-container relative w-full h-[200px] bg-gray-200">
            <!-- Thumbnail Placeholder -->
        </div>
        <div class="card-detail-container flex flex-col p-5 pb-[30px] gap-4">
            <!-- Title Placeholder -->
            <div class="h-[72px] flex flex-col gap-2">
                <div class="h-6 bg-gray-200 rounded w-full"></div>
                <div class="h-6 bg-gray-200 rounded w-2/3"></div>
            </div>

            <div class="flex items-center justify-between">
                <!-- Price Placeholder -->
                <div class="h-[30px] w-32 bg-gray-200 rounded"></div>
                <!-- Duration Placeholder -->
                <div class="flex items-center justify-end gap-[6px]">
                    <div class="h-5 w-16 bg-gray-200 rounded"></div>
                    <div class="w-6 h-6 bg-gray-200 rounded-full"></div>
                </div>
            </div>
            <hr class="border-[#F6F5FD]" />
            <div class="flex items-center justify-between">
                <!-- Location Placeholder -->
                <div class="flex items-center justify-end gap-[6px]">
                    <div class="w-6 h-6 bg-gray-200 rounded-full"></div>
                    <div class="h-5 w-24 bg-gray-200 rounded"></div>
                </div>
                <!-- Rating Placeholder -->
                <div class="flex items-center justify-end gap-[6px]">
                    <div class="h-5 w-12 bg-gray-200 rounded"></div>
                    <div class="w-6 h-6 bg-gray-200 rounded-full"></div>
                </div>
            </div>
            <hr class="border-[#F6F5FD]" />
            <div class="flex items-center justify-between">
                <!-- Feature 1 Placeholder -->
                <div class="flex items-center justify-end gap-[6px]">
                    <div class="w-6 h-6 bg-gray-200 rounded-full"></div>
                    <div class="h-5 w-24 bg-gray-200 rounded"></div>
                </div>
                <!-- Feature 2 Placeholder -->
                <div class="flex items-center justify-end gap-[6px]">
                    <div class="w-6 h-6 bg-gray-200 rounded-full"></div>
                    <div class="h-5 w-24 bg-gray-200 rounded"></div>
                </div>
            </div>
        </div>
    </div>
</div>
